<!--Loops through the product array to output onto UI-->

{{# each products}}

<div class="row">

{{# each this}}

  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="{{this.imagePath}}" alt="..." class="img-responsive">
      <div class="caption">
        <h3>{{this.name}}</h3>
        <p class="description">{{ this.category }}</p>
        <div class="clearfix">
            <div class="price pull-left">Â£ {{this.price}}</div>
            <a href="/add-to-cart/{{this._id}}" class="btn btn-info pull-right" role="button">Add to shopping cart</a>
            </div>
      </div>
    </div>
  </div>
{{/each}}
</div>
{{/each}}

